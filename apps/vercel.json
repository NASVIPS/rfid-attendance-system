{
  "builds": [
    {
      "src": "backend/src/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/index.html",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist" 
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/app.js" 
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1" 
    }
  ],
  "env": {
   
    "DATABASE_URL": "@rfid_database_url",
    "JWT_SECRET": "@rfid_jwt_secret",
    "JWT_EXP": "1h",
    "REFRESH_JWT_EXP": "7d",
    "CORS_ORIGIN": "https://your-frontend-app.vercel.app,http://localhost:3000",

    "VITE_BACKEND_URL": "https://your-backend-app.vercel.app/api",
    "VITE_WEBSOCKET_URL": "wss://your-backend-app.vercel.app"
  }
}